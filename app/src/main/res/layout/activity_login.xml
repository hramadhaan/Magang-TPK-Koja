<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    tools:context=".AccountActivity.LoginActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/login_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/login_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/login_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circularblack"
                    android:textSize="20dp"
                    android:text="Login"
                    android:textColor="@color/colorPrimaryDark"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/login_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/blue_normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="22dp"
                    android:text="Welcome Back !"
                    android:textColor="@color/white"
                    android:fontFamily="@font/circularblack"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/login_header"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username :"
                    android:id="@+id/user"
                    android:fontFamily="@font/circularbook"
                    android:textSize="14dp"/>

                <EditText
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_username"
                    android:fontFamily="@font/circularbook"
                    android:layout_below="@id/user"
                    android:layout_marginTop="10dp"
                    android:padding="7dp"
                    android:background="@drawable/edit_text_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_username"
                    android:id="@+id/pass"
                    android:text="Password"
                    android:fontFamily="@font/circularbook"
                    android:textSize="14dp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_password"
                    android:layout_below="@id/pass"
                    android:layout_marginTop="10dp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/circularbook"
                    android:background="@drawable/edit_text_bg"
                    android:padding="7dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/login_button"
                    android:background="@drawable/blue"
                    android:textAllCaps="false"
                    android:textSize="14dp"
                    android:layout_below="@id/login_password"
                    android:layout_marginTop="30dp"
                    android:text="Login"
                    android:fontFamily="@font/circularblack"
                    android:textColor="#fff"/>


            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>