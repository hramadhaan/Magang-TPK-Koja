<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Content.CobaUpload">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/im_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="87dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/im_edit"
            android:layout_below="@id/im_upload"/>

        <Button
            android:id="@+id/bt_ambil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bt_kirim"
            android:layout_alignBottom="@+id/bt_kirim"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:onClick="ambilGambar"
            android:text="Ambil"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="456dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp" />

        <Button
            android:id="@+id/bt_kirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="11dp"
            android:onClick="kirimGambar"
            android:text="Kirim"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="456dp"
            android:layout_marginRight="11dp"
            android:layout_alignParentRight="true" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/im_upload"
            android:layout_alignTop="@+id/bt_kirim"
            android:layout_alignLeft="@+id/im_upload" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>