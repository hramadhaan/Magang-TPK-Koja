<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity.RegisterActivity">

    <ImageView
        android:id="@+id/register_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:src="@drawable/tpkkoja" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_judul"
        android:text="Registrasi Akun"
        android:fontFamily="@font/circularblack"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_header"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/register_judul"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username :"
            android:id="@+id/username"
            android:fontFamily="@font/circularbook"
            android:textSize="14dp"/>

        <EditText
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_username"
            android:fontFamily="@font/circularbook"
            android:layout_below="@id/username"
            android:layout_marginTop="10dp"
            android:padding="7dp"
            android:background="@drawable/edit_text_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_username"
            android:id="@+id/password"
            android:text="Password"
            android:fontFamily="@font/circularbook"
            android:textSize="14dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_password"
            android:layout_below="@id/password"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:fontFamily="@font/circularbook"
            android:background="@drawable/edit_text_bg"
            android:padding="7dp"/>

        <Button
            android:id="@+id/register_button"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_password"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/circularblack"
            android:text="Register"
            android:textColor="#fff" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_button"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah punya akun ?"
                android:fontFamily="@font/circularbook"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Klik Disini"
                android:id="@+id/klik_disini"
                android:textColor="#2B5876"
                android:fontFamily="@font/circularbook"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>